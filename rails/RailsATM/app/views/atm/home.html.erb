<div class="row">
  <div class="col s12 m12">
    <div class="card-panel teal">
      <span class="white-text">
        <h2>Rails ATM</h2>
        <p>Enter amounts for deposit or withdrawal, or click below to check your balance</p>
        <div>
         <%= form_tag("/atm/home", method: "post") do %>
         <%= hidden_field_tag(:atmaction, value = "balance", options = {}) %>
          <%= submit_tag("$",:class => "btn-floating waves-light green") %>  Check Balance
         <% end %>
        </div>
       </span>
    </div>
  </div>
</div>
<div class='panel'>
<table>
  <thead>
    <tr>
      <td>Deposits</td>
      <td>Withdrawals</td>
      <td>Check Balance</td>
    <tr>
      <td>
        <%= form_tag("/atm/home", method: "post" do) %>
        <%= label_tag(:d_amount, "deposit amount") %>
        <%= text_field_tag(:d_amont) %>
        <%= hidden_field_tag(:atmaction, value="deposit", options = {}) %>
          <%= submit_tag("Deposit",:class => "btn waves-light") %>
        <%= end %>
      </td>
      <td>
        <%= form_tag("/atm/home", method: "post" do) %>
        <%= label_tag(:w_amount, "withdrawal amount") %>
        <%= text_field_tag(:w_amont) %>
        <%= hidden_field_tag(:atmaction, value="withdraw", options = {}) %>
        <%= submit_tag("Withdraw",:class => "btn waves-light") %>
        <%= end %>
      </td>
        <%= form_tag("/atm/home", method: "post" do) %>
        <%= label_tag(:placeholder, "Click Below to see your balance") %>
        <%= text_field_tag("placeholder", value = ''. options = (:disabled => true)) %>
        <%= hidden_field_tag(:atmaction, value="balance", options = {}) %>
        <%= submit_tag("Check Balance",:class => "btn waves-light") %>
        <%= end %>
        <td colspan=<%= RailsATM::Application.config.messa %></td>
    </tr>
      
    </thead>
  <tbody>