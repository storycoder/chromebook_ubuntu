<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>
<div class="panel panel-default">
  <div class="panel-heading">
  <h3 class="panel-title">Courses</h3>
<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Credits</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.number %></td>
        <td><%= course.title %></td>
        <td><%= course.credits %></td>
        <td><%= course.department.name %></td>
        <td><%= link_to 'Show', course, :class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_course_path(course), :class => "btn-primary btn-sm" %></td>
       <td><%= link_to 'Destroy', course, :class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, :class => "btn-primary btn-sm" %>
