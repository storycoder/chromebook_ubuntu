<p id="notice"><%= notice %></p>
<div class="panel panel-default"
  <div class="panel-heading">
  <h3 class="panel-title">Student Details</h3>
</div>
<div class="panel-body">
  <div>
    <d1 class="panel-body">
    <div>
      <d1 class="d1-horizontal">
        <dt>Last name</dt>
        <dd><%= @student.last_name %></dd>
        <dt>First name name</dt>
        <dd><%= @student.first_name %></dd>
        <dt>Enrollment Date</dt>
        <dd><%= @student.enrollment_date %></dd>
        <dt>Enrollments</dt>
        <dd>
          <table class="table">
          <thead>
          <tr class="row">
            <th>Course Title</th>
            <th>Grade</th>
          </tr>
          </thead>
          <tbody>
            <% @enrollments.each do |enrollment| %>
            <tr class="row">
              <td><%= enrollment.course.title %></td>
              <td><%= enrollment.grade %></td>
            </tr>
            <% end %>
          </tbody>
          </table>
        </dd>
      </d1>
    </div>
  </div>
  <div class ="panel-footer">
    <%= link_to "Edit", edit_student_path(@student),:class => "btn-primary btn-sm" %>
    <%= link_to "Back", students_path,:class => "btn-primary btn-sm" %>
  </div>
</div>
<p>
<strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Enrollment date:</strong>
  <%= @student.enrollment_date %>
</p>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Back', students_path %>
